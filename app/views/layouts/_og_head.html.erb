<script type="text/javascript">
  $(document).on('ready page:change', function() {
    $("meta[property='fb\\:app_id']").attr("content", "<%= ENV["FACEBOOK_APP_ID"] %>");
    $("meta[name='twitter\\:card']").attr("content", "summary_large_image");
    $("meta[name='twitter\\:site']").attr("content", "@BurgasReporter");
    $("meta[name='og\\:type']").attr("content", "article");
    $("meta[name='twitter\\:title']").attr("content", "<%= @article.title %>");
    $("meta[name='twitter\\:description']").attr("content", "<%= strip_tags(@article.content).truncate_words(20, omission: '  ... ') %>");
    // $("meta[name='twitter\\:image']").attr("content", "<%= request.protocol + request.host + attachment_url(@article, :article_image, :fit, 440, 240) unless @article.article_image.nil? %>");
    $("meta[property='og\\:title']").attr("content", "<%= @article.title %>");
    $("meta[property='og\\:description']").attr("content", "<%= strip_tags(@article.content).truncate_words(20, omission: '  ... ') %>");
    $("meta[property='og\\:url']").attr("content", "<%= request.original_url %>");
    // $("meta[property='og\\:image']").attr("content", "<%= request.protocol + request.host + attachment_url(@article, :article_image, :fit, 440, 240) unless @article.article_image.nil? %>");
  });
</script>
