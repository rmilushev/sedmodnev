- content_for :head do
  = tag :meta, property: "fb:app_id", content: ENV["FACEBOOK_APP_ID"]
  = tag :meta, property: "og:site_name", content: I18n.t(:brand)
  = tag :meta, property: "og:type", content: "article"
  = tag :meta, property: "og:title", content: @article.title
  = tag :meta, property: "og:published_time", content: @article.created_at.strftime("%d-%m-%Y %H:%M")
  = tag :meta, property: "og:image", content: request.original_url + attachment_url(@article, :article_image)
.artshow
  .art-show-wrap
    %p#notice= notice
    %h2
      =h raw @article.title
    .artcl-image
      =image_tag attachment_url(@article, :article_image, :fit, 600, 300)
      %p= request.original_url + attachment_url(@article, :article_image)
    .art-content
      %p
        =h raw  @article.content
    - if admin_signed_in?
      = link_to t(:edit_article), edit_article_path(@article), class: 'btn btn-warning'
      = link_to t(:delete_article), @article, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure?'}
