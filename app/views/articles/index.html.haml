.article-container
  - @articles.each do |art|
    .article-item
    .row
      .col-lg-8.col-md-9.col-xs-12.art-image
        = link_to art, data: { turbolinks: false} do
          = image_tag attachment_url(art, :article_image, :fill, 860, 370), class: "img-responsive"
          .article-title.text-center
            %h1
              %span= art.title
      %h3 Tags:
      = raw art.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')
  = will_paginate @author_articles
