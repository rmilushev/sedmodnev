%h1 Listing articles

%table
  %thead
    %tr
      %th Title
      %th Content
      %th Published
      %th Picture
      %th Author
      %th Category
      %th Golive
      %th
      %th
      %th

  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.content
        %td= article.published
        %td= article.picture
        %td= article.author_id
        %td= article.category_id
        %td= article.golive
        %td= link_to 'Show', article
        %td= link_to 'Edit', edit_article_path(article)
        %td= link_to 'Destroy', article, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

