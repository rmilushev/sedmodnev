= form_for(@article) do |f|
  .alert.alert-danger
    %ul
      - @article.errors.full_messages.each do |err|
        %li= err
  .container
    .form-inputs
      = f.text_field :title
      = f.attachment_field :article_image
      = f.label :content
      = f.trix_editor :content
      -# = f.input :published
      -# = f.input :picture, as: :file
      -# = f.input :author_id
      -# = f.input :category_id
      -# = f.input :golive

    .form-actions
      = f.submit
