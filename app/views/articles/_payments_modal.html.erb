<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title" id="exampleModalLabel"><%= I18n.t('payment_sentency') %></h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'payment_buttons' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Exit</button>
      </div>
    </div>
  </div>
</div>

<script>
  // glob_amount = 0
  $('#exampleModal').on('show.bs.modal', function (event) {
      var modaltitle = ''
      var button = $(event.relatedTarget) // Button that triggered the modal
      var amount = button.data('amount') // Extract info from data-* attributes
      window.gamount = amount
      // If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
      // Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
      var modal = $(this)
      var title = modal.find('.modal-title').text()
      modaltitle = title + ' ' + amount + ' Лева'
      modal.find('.modal-title').text(modaltitle)
    })
</script>
