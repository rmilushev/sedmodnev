.divide80
.container
  .row
    .col-md-8.col-sm-8.col-md-offset-2.col-sm-offset-2
      .login-form

        = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
          %h3 Sign in
          = devise_error_messages!
          .form-group
            = f.label :email
            = f.email_field :email, :autofocus => true, class: 'form-control'
          .form-group
            = f.label :password
            = f.password_field :password, class: 'form-control'
          = f.submit 'Sign in', :class => 'button btn btn-theme-bg'
          - if devise_mapping.registerable? && current_admin
            = link_to 'Sign up', new_registration_path(resource_name), class: 'right'
          - if devise_mapping.recoverable?
            = link_to "Forgot password?", new_password_path(resource_name), class: 'right'

          - if devise_mapping.rememberable?
            .checkbox{:style => "width:150px"}
              %label
                = f.check_box :remember_me
                Remember me
